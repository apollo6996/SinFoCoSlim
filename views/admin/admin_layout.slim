    link rel="stylesheet" href="/stylesheets/app.css"
    link rel="stylesheet" href="/stylesheets/foundation-icons.css"

  body
    header
    - if @username == "admin"
      .icon-bar.five-up
        a.item href="/admin"
          i.fi-thumbnails
          label Главная
        a.item href="/tickets"
          i.fi-book-bookmark
          label Заявки
        a.item href="/sales"
          i.fa.fa-certificate
          label Спецпредложения
        a.item href="/users"
          i.fi-torsos-female-male
          label Пользователи
        a.item
          i.fi-graph-bar
          label Статистика
    - else
      .icon-bar.two-up
        a.item href="/tickets"
          i.fi-book-bookmark
          label Заявки
        a.item href="/sales"
          i.fa.fa-certificate
          label Спецпредложения

    == yield      

